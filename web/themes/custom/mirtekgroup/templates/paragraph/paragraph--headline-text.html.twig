{% block paragraph %}
    {% block content %}
        <div class="paragraph paragraph--headline-text">
                {% if content.field_title_formatted|render|trim|length > 0 %}
                    <div class="h3">{{ content.field_title_formatted|without('#theme')|typography }}</div>
                {% endif %}
                {% if content.field_description|render|trim|length > 0 %}
                    <div class="paragraph-text">
                        {{ content.field_description|without('#theme')|typography }}
                    </div>
                {% endif %}
        </div>
    {% endblock %}
{% endblock paragraph %}


