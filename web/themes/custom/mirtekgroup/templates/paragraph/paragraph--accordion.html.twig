{%
    set classes = [
    'paragraph',
]
%}

{% block paragraph %}
        {% block content %}
            <hr>
            <div class="accordion">
                <div class="title">
                    <div class="h3">{{ content.field_accordion_title|without('#theme') }}</div>
                    <div class="mdi mdi-chevron-right"></div>
                </div>
                <div class="content">
                    {{ content.field_paragraph|without('#theme') }}
                </div>
            </div>
        {% endblock %}
{% endblock paragraph %}